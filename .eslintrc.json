{
  "env": {
    "browser": true,
    "webextensions": true,
    "es6": true
  },
  "ignorePatterns": ["node_modules/", "dest*/", "*.mjs"],
  "extends": ["eslint:recommended", "prettier"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "es5",
        "singleQuote": true,
        "semi": false,
        "tabWidth": 2,
        "useTabs": false,
        "bracketSpacing": true
      }
    ]
  }
}
